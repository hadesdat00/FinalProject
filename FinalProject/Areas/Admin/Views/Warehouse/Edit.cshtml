@model FinalProject.Models.KhoHang
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Sửa Kho</h3>
            <form action="~/Admin/Warehouse/Edit" method="post">
                <div class="form-group">
                    <label for="MaKho">Mã Kho:</label>
                    @Html.TextAreaFor(x => x.MaKho, new { @class = "form-control", @readonly = "readonly" })

                    <label>Tên Kho:</label>
                    <input type="text" class="form-control" id="TenKho" name="TenKho" />

                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" />

                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" id="DiaChi" name="DiaChi" />

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}