@model IEnumerable<FinalProject.Models.KhoHang>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Kho hàng</h3>
            <a href="~/Admin/Warehouse/Add" class="btn btn-success" style="background-color: #007606 ">Thêm</a>
            <form method="post" action="~/Admin/Warehouse/Index">
                <table class="table table-bordered table-striped table-hover table-responsive-sm">
                    <thead class="bg-success text-light">
                        <tr>
                            <th>Mã kho</th>
                            <th>Tên kho</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaKho</td>
                                <td>@item.TenKho</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.DiaChi</td>
                                <td><a href="~/Admin/Warehouse/Edit/@item.MaKho">Sửa</a> | <a href="~/Admin/Warehouse/Delete/@item.MaKho">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </form>
        </div>
    }
}

