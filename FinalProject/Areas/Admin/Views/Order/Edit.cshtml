@model FinalProject.Models.Order
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Sửa hóa đơn</h3>
            <form action="~/Admin/Order/Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="OrderID">Mã hóa đơn:</label>
                    @Html.TextBoxFor(x => x.OrderID, new { @class = "form-control", @readonly = "readonly" })

                    <label>Ngày tạo:</label>
                    <input type="datetime-local" class="form-control" value="@Model.CreatedDate" id="CreatedDate" name="CreatedDate" />

                    <label>Tên khách hàng:</label>
                    <input type="text" class="form-control" value="@Model.ShipName" id="ShipName" name="ShipName" />

                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" value="@Model.ShipMobile" id="ShipMobile" name="ShipMobile" />

                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" value="@Model.ShipAddress" id="ShipAddress" name="ShipAddress" />

                    <label>Email:</label>
                    <input type="email" class="form-control" value="@Model.ShipEmail" id="ShipEmail" name="ShipEmail" />

                    <label>Trạng thái:</label>
                    <input type="text" class="form-control" value="@Model.Status" id="Status" name="Status" />
                    <div class="row"><p>Trạng thái đơn hàng: Chờ xử lý / Đang xử lý / Đã xác nhận / Đang giao / Hoàn thành.</p></div>

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}