
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Thêm User</h3>
            <form action="~/Admin/User/Add" method="post">
                <div class="form-group">
                    <label for="MaUser">Mã User:</label>
                    <input type="text" class="form-control" id="MaUser" name="MaUser" />

                    <label>Username:</label>
                    <input type="text" class="form-control" id="Username" name="Username" />

                    <label>Password:</label>
                    <input type="text" class="form-control" id="Password" name="Password" />

                    <label>Mã Group:</label>
                    <input type="number" class="form-control" id="MaGroup" name="MaGroup" />
                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}