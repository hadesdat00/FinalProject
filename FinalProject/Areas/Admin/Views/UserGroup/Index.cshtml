@model IEnumerable<FinalProject.Models.UserGroup>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Loại User (Mặc định)</h3>
            <a href="~/Admin/UserGroup/Add" class="btn btn-success" style="background-color: #007606 ">Thêm</a>
            <form method="post" action="~/Admin/UserGroup/Index">
                <table class="table table-bordered table-striped table-hover table-responsive-sm">
                    <thead class="bg-success text-light">
                        <tr>
                            <th>Mã Group</th>
                            <th>Tên Group</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaGroup</td>
                                <td>@item.TenGroup</td>
                                <td><a href="~/Admin/UserGroup/Edit/@item.MaGroup">Sửa</a> | <a href="~/Admin/UserGroup/Delete/@item.MaGroup">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </form>
        </div>
    }

}
