
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Thêm Group</h3>
            <form action="~/Admin/UserGroup/Add" method="post">
                <div class="form-group">
                    <label for="MaGroup">Mã Group:</label>
                    <input type="text" class="form-control" id="MaGroup" name="MaGroup" />

                    <label>Tên Group:</label>
                    <input type="text" class="form-control" id="TenGroup" name="TenGroup" />

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}