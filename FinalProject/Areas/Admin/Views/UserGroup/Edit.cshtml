@model FinalProject.Models.UserGroup
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Sửa Group</h3>
            <form action="~/Admin/UserGroup/Edit" method="post">
                <div class="form-group">
                    <label>Mã Group:</label>
                    @Html.TextAreaFor(x => x.MaGroup, new { @class = "form-control", @readonly = "readonly" })

                    <label>Tên Group:</label>
                    <input type="text" class="form-control" value="@Model.TenGroup" id="TenGroup" name="TenGroup" />
                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}