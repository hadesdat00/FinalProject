@model FinalProject.Models.SanPham
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Sửa sản phẩm</h3>
            <form action="~/Admin/Product/Edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="ProductID">Mã sản phẩm:</label>
                    @Html.TextAreaFor(x => x.ProductID, new { @class = "form-control", @readonly = "readonly" })

                    <label>Tên sản phẩm:</label>
                    <input type="text" class="form-control" value="@Model.TenSP" id="TenSP" name="TenSP" />

                    <label>Loại sản phẩm:</label>
                    @Html.DropDownList("LoaiSP", null, new { @class = "form-control" })

                    <label>Thương Hiệu:</label>
                    @Html.DropDownList("ThuongHieu", null, new { @class = "form-control" })

                    <label>Giá nhập:</label>
                    <input type="number" class="form-control" value="@Model.GiaNhap" id="GiaNhap" name="GiaNhap" />

                    <label>Giá bán:</label>
                    <input type="number" class="form-control" value="@Model.GiaBan" id="GiaBan" name="GiaBan" />

                    <label>Số lượng:</label>
                    <input type="text" class="form-control" value="@Model.SoLuong" id="SoLuong" name="SoLuong" />

                    <label>Upload hình</label>
                    <input type="file" id="uploadhinh" name="uploadhinh" accept="image/*" />
                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}
