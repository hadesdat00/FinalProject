@model IEnumerable<FinalProject.Models.LoaiSanPham>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Loại sản phẩm</h3>
            <a href="~/Admin/Category/Add" class="btn btn-success" style="background-color: #007606 ">Thêm</a>
            <form method="post" action="~/Admin/Category/Index">
                <table class="table table-bordered table-striped table-hover table-responsive-sm">
                    <thead class="bg-success text-light">
                        <tr>
                            <th>Mã loại sản phẩm</th>
                            <th>Tên loại sản phẩm</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaLSP</td>
                                <td>@item.TenLSP</td>
                                <td><a href="~/Admin/Category/Edit/@item.MaLSP">Sửa</a> | <a href="~/Admin/Category/Delete/@item.MaLSP">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </form>
        </div>
    }
}