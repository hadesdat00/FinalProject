@model FinalProject.Models.NhaCungCap
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Sửa nhà cung cấp</h3>
            <form action="~/Admin/Manufacture/Edit" method="post">
                <div class="form-group">
                    <label for="MaNCC">Mã nhà cung cấp:</label>
                    @Html.TextAreaFor(x => x.MaNCC, new { @class = "form-control", @readonly = "readonly" })

                    <label>Tên nhà cung cấp:</label>
                    <input type="text" class="form-control" value="@Model.TenNCC" id="TenNCC" name="TenNCC" />

                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" value="@Model.SoDienThoai" id="SoDienThoai" name="SoDienThoai" />

                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" value="@Model.DiaChi" id="DiaChi" name="DiaChi" />

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}