
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Thêm nhà cung cấp</h3>
            <form action="~/Admin/Manufacture/Add" method="post">
                <div class="form-group">
                    <label for="MaNCC">Mã nhà cung cấp:</label>
                    <input type="text" class="form-control" id="MaNCC" name="MaNCC" />

                    <label>Tên nhà cung cấp:</label>
                    <input type="text" class="form-control" id="TenNCC" name="TenNCC" />

                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" id="SoDienThoai" name="SoDienThoai" />

                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" id="DiaChi" name="DiaChi" />

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}