@model IEnumerable<FinalProject.Models.NhaCungCap>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Danh sách nhà cung cấp</h3>
            <a href="~/Admin/Manufacture/Add" class="btn btn-success" style="background-color: #007606 ">Thêm</a>
            <form method="post" action="~/Admin/Manufacture/Index">
                <table class="table table-bordered table-striped table-hover table-responsive-sm">
                    <thead class="bg-success text-light">
                        <tr>
                            <th>Mã nhà cung cấp</th>
                            <th>Tên nhà cung cấp</th>
                            <th>Số điện thoại</th>
                            <th>Địa chỉ</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.MaNCC</td>
                                <td>@item.TenNCC</td>
                                <td>@item.SoDienThoai</td>
                                <td>@item.DiaChi</td>
                                <td><a href="~/Admin/Manufacture/Edit/@item.MaNCC">Sửa</a> | <a href="~/Admin/Manufacture/Delete/@item.MaNCC">Xóa</a></td>
                            </tr>
                        }
                    </tbody>
                </table>

            </form>
        </div>
    }
}

