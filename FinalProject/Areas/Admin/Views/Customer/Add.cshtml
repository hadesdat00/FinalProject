
@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Session["SESSION_GROUP"] != null)
{
    List<string> privilegeLevels = (List<string>)Session["SESSION_GROUP"];

    if (privilegeLevels[0].CompareTo("Admin") == 0 || privilegeLevels[0].CompareTo("Staff") == 0)
    {
        <div class="container-fluid mr-5">
            <h3>Thêm khách hàng</h3>
            <form action="~/Admin/Customer/Add" method="post">
                <div class="form-group">
                    <label for="CustomerID">Mã khách hàng:</label>
                    <input type="text" class="form-control" id="CustomerID" name="CustomerID" />

                    <label>Tên khách hàng:</label>
                    <input type="text" class="form-control" id="ShipName" name="ShipName" />

                    <label>Số điện thoại:</label>
                    <input type="text" class="form-control" id="ShipMobile" name="ShipMobile" />

                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" id="ShipAddress" name="ShipAddress" />

                    <label>Email:</label>
                    <input type="email" class="form-control" id="ShipEmail" name="ShipEmail" />

                    <label>Mã tài khoản:</label>
                    <input type="text" class="form-control" id="MaUser" name="MaUser" />

                    <label>Mã hóa đơn:</label>
                    <input type="number" class="form-control" id="OrderID" name="OrderID" />

                </div>
                <button class="btn btn-success" style="background-color: #007606 " type="submit">Lưu</button>
            </form>
        </div>
    }
}