@model PagedList.IPagedList<FinalProject.Models.SanPham>
@using PagedList.Mvc


@{
    ViewBag.Title = "Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="container">
    <div class="row mt-5">
        <div class="col-md-3">
            @Html.Action("CategoryPartial", "Product")
            @Html.Action("CategoryPartial2", "Product")
        </div>
        <div class="col-md-9">
            <div class="row row-pb-lg">
                <div class="col-md-12 text-center mb-lg-5">
                    <h1>TẤT CẢ SẢN PHẨM</h1>
                </div>
                @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-6 col-12 text-center">
                        <div class="card card-product mb-3 product-entry">
                            <div class="product-img">
                                <img class="card-img-top" src="~/images/sanpham/@item.image" alt="jordan-1">
                                <p class="tag"><span class="new">New</span></p>
                                <div class="cart">
                                    <p>
                                        <span class="addtocart" data-bs-toggle="tooltip" data-bs-placement="top" title="Thêm vào giỏ hàng"><a href="/Cart/AddItem?productId=@item.ProductID&quantity=1" class="adtocart"><i class="fas fa-cart-plus"></i></a></span>
                                        <span data-bs-toggle="tooltip" data-bs-placement="top" title="Xem chi tiết"><a href="~/Product/ProductDetails/@item.ProductID"><i class="fas fa-eye"></i></a></span>
                                    </p>
                                </div>
                            </div>
                            <div class="desc line-clamp-2">
                                <h3>
                                    @Html.ActionLink(item.TenSP, "ProductDetails", "Product", new { id = item.ProductID }, null)
                                </h3>
                            </div>
                            <div class="desc">
                                <p class="price"><span>$@(Convert.ToDecimal(item.GiaBan).ToString("#,##0"))</span></p>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <div class="row">
                <div class="col-md-9">

                    @Html.PagedListPager(Model, page => Url.Action("Category", new { page }))
                    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
                </div>
            </div>
        </div>


    </div>

    <div class="row justify-content-center mt-xl-5">
        <div class="col-lg-6 text-center">
            <div class="section-title">
                <h1>Thương hiệu nổi bật</h1>
            </div>
        </div>
        <div class="col-md-12">
            <div class="row mt-lg-5">
                <div class="col-md-4">
                    <a href="~/Product/Brand/ADI001">
                        <img src="~/images/logo-adidas.jpg" />
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="~/Product/Brand/NKE001">
                        <img src="~/images/logo-nike.jpg" />
                    </a>
                </div>
                <div class="col-md-4">
                    <a href="~/Product/Brand/JOR001">
                        <img src="~/images/logo-jordan.png" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
